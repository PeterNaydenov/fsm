{
  "name": "@peter.naydenov/fsm",
  "description": "Finite State Machine",
  "version": "5.2.2",
  "license": "MIT",
  "author": "Peter Naydenov",
  "main": "./dist/fsm.umd.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/fsm.esm.mjs",
      "require": "./dist/fsm.cjs",
      "default": "./dist/fsm.umd.js"
    },
    "./package.json": "./package.json",
    "./dist/*": "./dist/*",
    "./src/*": "./src/*"
  },
  "scripts": {
    "test": "mocha test",
    "cover": "c8 mocha test",
    "build": "rollup -c"
  },
  "dependencies": {
    "@peter.naydenov/dt-queries": "^1.1.1",
    "ask-for-promise": "3.0.1",
    "dt-toolbox": "^7.4.3"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "c8": "^10.1.3",
    "chai": "5.1.2",
    "mocha": "11.0.1",
    "rollup": "^4.34.7"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PeterNaydenov/fsm.git"
  },
  "c8": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "node_modules",
      "test"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  }
}
